<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="30">

	<Properties>
		<!-- Please change your own path of the log file here -->
		<!-- <Property name="logdir">/Users/kong/Downloads/logs</Property> -->
		<!-- Or use the relative path -->
		<Property name="logdir">./logs</Property>
		<Property name="logfile">tenio-core</Property>
		<Property name="logfile-error">tenio-core-error</Property>
		<Property name="layout">%d [%t] %-5level %logger{36} - %m%n</Property>
		<!-- Logging level: trace -included-> debug -included-> info -included-> error -->
		<Property name="level">debug</Property>
	</Properties>

	<Appenders>

		<!-- Console appender (optional: useful in development) -->
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="${layout}" />
		</Console>

		<!-- Main rolling file appender -->
		<RollingFile name="MainFile"
					 fileName="${logdir}/${logfile}.log"
					 filePattern="${logdir}/${logfile}.%d{yyyy-MM-dd}-%i.log.gz">
			<PatternLayout pattern="${layout}" />
			<Policies>
				<TimeBasedTriggeringPolicy />
				<SizeBasedTriggeringPolicy size="10MB" />
			</Policies>
			<DefaultRolloverStrategy max="10" />
		</RollingFile>

		<!-- Error-level file appender -->
		<RollingFile name="ErrorFile"
					 fileName="${logdir}/${logfile-error}.log"
					 filePattern="${logdir}/${logfile-error}.%d{yyyy-MM-dd}-%i.log.gz">
			<ThresholdFilter level="ERROR" onMatch="ACCEPT" onMismatch="DENY"/>
			<PatternLayout pattern="${layout}" />
			<Policies>
				<TimeBasedTriggeringPolicy />
				<SizeBasedTriggeringPolicy size="10MB" />
			</Policies>
			<DefaultRolloverStrategy max="10" />
		</RollingFile>

		<!-- Async wrapper for file-based logging -->
		<Async name="AsyncFile">
			<AppenderRef ref="MainFile" />
			<AppenderRef ref="ErrorFile" />
		</Async>

	</Appenders>

	<Loggers>

		<!-- Silence 3rd party frameworks -->
		<Logger name="io.netty" level="warn" additivity="false">
			<AppenderRef ref="AsyncFile"/>
		</Logger>

		<Logger name="org.eclipse.jetty" level="warn" additivity="false">
			<AppenderRef ref="AsyncFile"/>
		</Logger>

		<Logger name="org.hibernate" level="warn" additivity="false">
			<AppenderRef ref="AsyncFile"/>
		</Logger>
		
		<!-- Application root logger -->
		<Root level="${level}">
			<AppenderRef ref="Console"/> <!-- remove this in production if needed -->
			<AppenderRef ref="AsyncFile"/>
		</Root>

	</Loggers>

</Configuration>
